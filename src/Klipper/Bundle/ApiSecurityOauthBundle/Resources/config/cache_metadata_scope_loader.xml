<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="klipper_api_security_oauth.scope.loader.metadata.warmer"
                 class="Klipper\Bundle\ApiSecurityOauthBundle\Scope\CacheWarmer\MetadataScopesCacheWarmer">
            <tag name="container.service_subscriber" />
            <tag name="kernel.cache_warmer" priority="-2048" />
            <argument type="service" id="Psr\Container\ContainerInterface" />
        </service>

        <service id="klipper_api_security_oauth.scope.loader.cache_metadata"
                 class="Klipper\Bundle\ApiSecurityOauthBundle\Scope\Loader\CacheMetadataScopeLoader"
                 decorates="klipper_api_security_oauth.scope.loader.metadata">
            <tag name="klipper_security_oauth.scope_loader" />
            <argument type="service" id="klipper_api_security_oauth.scope.loader.cache_metadata.inner" />
            <argument type="collection">
                <argument key="cache_dir">%kernel.cache_dir%/klipper_api_security_oauth_metadata_scopes</argument>
                <argument key="debug">%kernel.debug%</argument>
            </argument>
            <call method="setConfigCacheFactory">
                <argument type="service" id="config_cache_factory" />
            </call>
        </service>
    </services>
</container>
